@using Blazor.Heroicons.Outline

<div
  id="editFileNameModal"
  tabindex="-1"
  aria-hidden="true"
  class="fixed top-0 left-0 right-0 z-50 hidden h-screen p-4 overflow-x-hidden overflow-y-auto md:inset-0"
>
  <div class="w-full px-4 py-3 max-w-sm max-h-full flex border border-black/[.1] flex-col items-center bg-slate-100 rounded-lg shadow dark:bg-neutral-950 dark:border-white/[.15]">
    <div class="flex justify-between w-full items-center gap-1">
      <p class="text-sm dark:text-neutral-200">Change file name modal</p>
      <button type="button" @onclick="ToggleDropdown">
        <XMarkIcon class="h-4 w-4 dark:text-neutral-200" />
      </button>
    </div>
    <div class="w-full pt-4 pb-6">
      <label for="fileName" class="text-sm">
        File name
      </label>
      <div class="mt-1">
        <input
          type="text"
          id="fileName"
          @onkeyup="HandleChangeFileNameByEnter"
          @bind="InputFileName"
          class="h-8 w-full rounded-md border border-black/[.2] px-2 text-sm shadow-sm focus:ring-0 dark:bg-neutral-950 dark:border-white/[.15] dark:placeholder:text-neutral-600 @(IsErrorInput ? "inputError" : "")"
          placeholder="Enter new name..."
        />
      </div>
    </div>
    <div class="flex gap-4 items-center justify-end w-full">
      <button
        type="button"
        @onclick="ChangeFileName"
        class="bg-sky-400 border hover:bg-sky-500 transition-colors border-black/[.1] px-4 py-1 rounded-lg overflow-hidden"
      >
        <p class="text-white text-sm">Change</p>
      </button>
      <button
        type="button"
        @onclick="ToggleDropdown"
        class="text-gray-500 hover:text-gray-700 transition px-4 py-1 rounded-lg border border-black/[.1] overflow-hidden hover:bg-slate-200 dark:text-neutral-300 dark:border-white/[.15] dark:hover:bg-neutral-900"
      >
        <p class="text-sm">Cancel</p>
      </button>
    </div>
  </div>
</div>