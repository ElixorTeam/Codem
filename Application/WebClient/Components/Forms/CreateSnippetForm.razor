<div class="w-full pt-14 sm:border-box sm:sticky sm:top-0 sm:h-fit">
  <div class="h-fit w-full overflow-hidden rounded-lg border border-black/[.1] bg-slate-100 dark:bg-neutral-950 dark:border-white/[.15]">
    <EditForm Model="@Model" OnSubmit="@HandleSubmit">
      <DataAnnotationsValidator />
      <ValidationSummary />
      <div class="flex h-8 items-center border-b border-b-black/[.1] bg-white/[.7] px-4 dark:bg-neutral-900 dark:border-b-white/[.15]">
        <p class="text-sm">Snippet settings</p>
      </div>
      <div class="flex h-full w-full flex-col gap-2 px-4 py-2">
        <SnippetFormInputs IsAuthorized="IsAuthorized()" Model="Model" />
        <button
          type="submit"
          class="mb-2 mt-4 flex h-8 items-center justify-center rounded-md border border-black/[.2] bg-sky-400 hover:bg-sky-500">
          <p class="pb-1 text-sm text-white">Create snippet</p>
        </button>
      </div>
    </EditForm>
  </div>
</div>