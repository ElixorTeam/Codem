@inherits ComponentBase

<div class="sm:border-box w-full pt-14 sm:sticky sm:top-0 sm:h-fit">
  <div
    class="h-fit w-full overflow-hidden rounded-lg border border-black/[.15] bg-slate-100"
  >
    <div
      class="flex h-8 items-center border-b border-b-black/[.15] bg-white/[.7] px-4"
    >
      <p class="text-sm">Snippet settings</p>
    </div>
    <div class="flex h-full w-full flex-col gap-2 px-4 py-2">
      <div>
        <label for="title" class="text-sm">Title</label>
        <div class="mt-1">
          <input
            type="text"
            id="title"
            class="h-8 w-full rounded-md border border-black/[.2] px-2 text-sm shadow-sm"
            placeholder="Untitled snippet..."
          />
        </div>
      </div>
      <div>
        <label for="syntax" class="text-sm">Syntax highlighting</label>
        <select
          id="syntax"
          class="mt-1 h-8 w-full rounded-md border border-black/[.2] bg-white px-2 pr-10 text-sm"
        >
          <option>C#</option>
          <option selected>Python</option>
          <option>Java</option>
        </select>
      </div>
      <div>
        <label for="expiration" class="text-sm">Expiration time</label>
        <select
          id="expiration"
          class="mt-1 h-8 w-full rounded-md border border-black/[.2] bg-white px-2 pr-10 text-sm"
        >
          <option selected>Never</option>
          <option>1 Hour</option>
          <option>1 Day</option>
          <option>1 Week</option>
          <option>1 Month</option>
        </select>
      </div>
      <div>
        <label for="password" class="text-sm">Password</label>
        <div class="mt-1">
          <input
            type="text"
            id="password"
            disabled
            class="h-8 w-full rounded-md border border-black/[.2] px-2 text-sm shadow-sm"
            placeholder="Password..."
          />
        </div>
      </div>
      <div class="ml-2 mt-2 flex items-start">
        <div class="flex h-5 items-center">
          <input
            id="is-private"
            aria-describedby="comments-description"
            name="is-private"
            type="checkbox"
            class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500"
          />
        </div>
        <div class="ml-2 text-sm">
          <label for="is-private" class="font-medium text-gray-700">
            Private
          </label>
        </div>
      </div>
      <div class="ml-2 flex items-start">
        <div class="flex h-5 items-center">
          <input
            id="is-password"
            aria-describedby="comments-description"
            name="comments"
            type="checkbox"
            disabled
            class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500"
          />
        </div>
        <div class="ml-2 text-sm">
          <label for="is-password" class="font-medium text-gray-700">
            Use a password
          </label>
        </div>
      </div>
      <button
        class="mb-2 mt-4 flex h-8 items-center justify-center rounded-md border border-black/[.2] bg-sky-400 shadow-sm hover:bg-sky-500"
        ><p class="pb-1 text-sm text-white">Create snippet</p></button
      >
    </div>
  </div>
</div>
