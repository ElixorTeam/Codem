@page "/search"

<PageTitle>Codem - Search</PageTitle>

<div class="mx-auto mb-4 mt-16 w-full max-w-4xl">
  <div class="w-full px-4 text-center">
    <div
      class="mx-auto flex h-8 w-full max-w-lg items-center gap-2 overflow-hidden rounded-md border border-black/[.1] bg-white px-1"
    >
      <label class="w-full">
        <input
          type="text"
          @bind="SearchQuery"
          placeholder="Search by name..."
          class="h-full w-full pl-1 text-sm border-none focus:outline-none focus:ring-0"
        />
      </label>
      <a href="/search?searchQuery=@SearchQuery">
        <button
          type="button"
          class="flex h-6 items-center gap-2 rounded-md border border-black/[.1] bg-sky-400 px-2 hover:bg-sky-500"
        >
          <p class="text-xs text-white">Search</p>
          <MagnifyIcon class="mr-2 h-3 w-3 stroke-white" />
        </button>
      </a>
    </div>
  </div>
  <p class="my-4 px-4 text-2xl font-semibold text-slate-800">Code snippets</p>
  <ul class="my-4 flex h-full w-full flex-col px-2">
    <li>
      <SearchItem
        Id="11"
        Author="Ap73MKa"
        Code="print(Hello World!)"
        Syntax="Python"
        Title="Python code"
        PublicDate="DateOnly.FromDateTime(DateTime.Now)"
      />
    </li>
  </ul>
</div>
