@using Blazor.Heroicons.Outline;

<label class="relative hidden sm:block">
  <input
    type="text"
    @onkeyup="RedirectToSearchByEnter"
    @bind="_searchQuery"
    class="hidden h-8 overflow-hidden bg-transparent rounded-md border border-black/[.1] px-2 pr-8 text-xs focus:ring-0 focus:border-black/[.1] sm:block dark:border-white/[.15] dark:focus:border-white/[.15] dark:placeholder:text-neutral-600"
    placeholder="Search a snippet..."
  />
  <button type="button" @onclick="RedirectToSearch" class="right-0 mr-2 mt-2 top-0 absolute">
    <MagnifyingGlassIcon class="w-4 h-4 transition-colors text-gray-500 hover:text-gray-700 dark:text-neutral-400 dark:hover:text-neutral-200" />
  </button>
</label>